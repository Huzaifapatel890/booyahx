<resources>

    <!-- Main App Theme: No Action Bar anywhere -->
    <style name="Theme.BooyahX" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- OPTIONAL: If LoginActivity only needs NoActionBar -->
    <style name="Theme.BooyahX.NoActionBar" parent="Theme.AppCompat.NoActionBar" />

    <!-- OTP BOX STYLE -->
    <style name="OtpBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_neon_blue</item>
        <item name="android:textColor">#00C3FF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>


    <!-- ðŸ”¥ ADD THESE (Settings Styles) â€” THEY FIX THE CRASH -->
    <!-- SETTINGS ROW STYLE -->
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- SETTINGS ICON STYLE -->
    <style name="SettingsIconStyle">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <!-- SETTINGS TEXT STYLE -->
    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>   <!-- REQUIRED -->
        <item name="android:layout_height">wrap_content</item>  <!-- REQUIRED -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>