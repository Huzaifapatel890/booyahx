<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient"
    tools:context=".DashboardActivity">

    <!-- FRAGMENT CONTAINER (This replaces your ScrollView) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav" />

    <!-- BOTTOM NAV BAR (Keep this exactly as it was) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#111111">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavHome"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:contentDescription="home" />

            <TextView
                android:id="@+id/tvNavHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#00C3FF"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- PARTICIPATED -->
        <LinearLayout
            android:id="@+id/navParticipated"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavParticipated"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_participated"
                android:contentDescription="participated" />

            <TextView
                android:id="@+id/tvNavParticipated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- WALLET -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavWallet"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_wallet"
                android:contentDescription="wallet" />

            <TextView
                android:id="@+id/tvNavWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- SETTINGS -->
        <LinearLayout
            android:id="@+id/NavSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavsettings"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="settings" />

            <TextView
                android:id="@+id/tvNavProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>