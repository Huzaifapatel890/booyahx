<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:padding="25dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ† Submit Match Results"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_header_border" />
    <TextView
        android:id="@+id/matchStatusIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matches Saved: 0/6"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"/>

    <!-- Match Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match:"
            android:textColor="#888888"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp" />

        <Spinner
            android:id="@+id/matchSelector"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:padding="10dp"
            android:popupBackground="#111111" />
    </LinearLayout>

    <!-- Teams Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Points for Each Team"
        android:textColor="#00FFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <!-- Scroll List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/teamsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Save Match / Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#666666"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/cancel_button_bg"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/saveMatchBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Match"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/neon_green"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Final Submit -->
    <TextView
        android:id="@+id/submitFinalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ† SUBMIT FINAL POINTS TABLE"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="14dp"
        android:background="@drawable/neon_green"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>