<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/sample_avatar"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_double_ring"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Huzaifa VP7"
                android:textColor="#00C8FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huzaifa@example.com"
                android:textColor="#90FFFFFF"
                android:textSize="13sp"
                android:layout_marginTop="3dp" />


        </LinearLayout>

        <!-- MENU ITEMS -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- EDIT PROFILE -->
            <LinearLayout
                android:id="@+id/btnEditProfile"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_edit_profile"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Edit Profile" />
            </LinearLayout>

            <!-- CHANGE PASSWORD -->
            <LinearLayout
                android:id="@+id/btnChangePassword"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_change_password"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Change Password" />
            </LinearLayout>

            <!-- WINNING HISTORY -->
            <LinearLayout
                android:id="@+id/btnWinningHistory"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_winning_history"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Winning History" />
            </LinearLayout>

            <!-- THEMES -->
            <LinearLayout
                android:id="@+id/btnThemes"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_themes"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Themes" />
            </LinearLayout>

            <!-- ABOUT US -->
            <LinearLayout
                android:id="@+id/btnAboutUs"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_about_us"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="About Us" />
            </LinearLayout>

            <!-- SUPPORT -->
            <LinearLayout
                android:id="@+id/btnSupport"
                style="@style/SettingsItemStyle">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_support"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Help and Support" />
            </LinearLayout>

        </LinearLayout>

        <!-- LOGOUT BUTTON -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:background="@drawable/logout_button_border"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_logout"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>