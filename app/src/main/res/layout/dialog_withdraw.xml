<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/withdraw_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/neon_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#0a0a0a"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="#00d9ff"
        app:strokeWidth="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- WITHDRAWAL FORM -->
                <LinearLayout
                    android:id="@+id/layoutForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’Ž Withdraw "
                            android:textColor="#00d9ff"
                            android:singleLine="true"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Balance Section with Neon Card Background -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/neon_card"
                        android:padding="20dp"
                        android:layout_marginBottom="24dp">

                        <!-- Current Balance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Current Balance"
                                android:textColor="#7a7a7a"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvCurrentBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="256 GC"
                                android:textColor="#00ff88"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1a3a3a"
                            android:layout_marginVertical="4dp" />

                        <!-- Withdrawable Balance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Withdrawable"
                                android:textColor="#7a7a7a"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvWithdrawableBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="256 GC"
                                android:textColor="#00ff88"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- UPI ID Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPI ID"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/etUpiId"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="UPI ID"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#8a8a8a"
                        android:textColorHint="#4a4a4a"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your registered UPI ID"
                        android:textColor="#5a5a5a"
                        android:textSize="13sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Warning Layout (shown if no UPI) -->
                    <LinearLayout
                        android:id="@+id/layoutUpiWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/warning_background"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="UPI ID Required"
                                android:textColor="#ff9900"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please add your UPI ID in profile settings to withdraw money."
                            android:textColor="#cccccc"
                            android:textSize="14sp"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="14dp" />

                        <TextView
                            android:id="@+id/tvUpdateProfileWarning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘‰ Update Profile"
                            android:textColor="#00d9ff"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Amount Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdrawal Amount (GC)"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Enter amount to withdraw"
                        android:inputType="numberDecimal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#4a4a4a"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <!-- Error Message -->
                    <TextView
                        android:id="@+id/tvAmountError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please enter a valid amount"
                        android:textColor="#ff5555"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:layout_marginBottom="6dp" />

                    <!-- Weger Warning Message -->
                    <TextView
                        android:id="@+id/tvWegerWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warning message"
                        android:textColor="#ff9900"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min: 40 GC   Max: 9999 GC"
                        android:textColor="#5a5a5a"
                        android:textSize="13sp"
                        android:layout_marginBottom="28dp" />

                    <!-- Withdraw Button as TextView -->
                    <TextView
                        android:id="@+id/btnWithdraw"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@drawable/neon_button"
                        android:text="ðŸ’° WITHDRAW NOW"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="4dp" />
                </LinearLayout>

                <!-- SUCCESS SCREEN -->
                <LinearLayout
                    android:id="@+id/layoutSuccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingVertical="20dp">

                    <!-- Check Animation -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animCheck"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginBottom="24dp"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false" />

                    <!-- Success Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdrawal Submitted!"
                        android:textColor="#00ff88"
                        android:singleLine="true"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- Amount with Neon Card Background -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/neon_green"
                        android:padding="20dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/tvSuccessAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200 GC"
                            android:textColor="#00d9ff"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Message Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your withdrawal request has been received"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your withdrawal will be checked and credited to your UPI ID shortly."
                            android:textColor="#7a7a7a"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usually takes 2-24 hours."
                            android:textColor="#5a5a5a"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!-- Done Button as TextView -->
                    <TextView
                        android:id="@+id/btnDone"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/button_done"
                        android:text="DONE"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>