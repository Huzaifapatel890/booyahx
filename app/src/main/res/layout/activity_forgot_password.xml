<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_dark_gradient">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#00C3FF"
            android:layout_marginTop="60dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to get OTP"
            android:textSize="16sp"
            android:textColor="#99CDEB"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- EMAIL INPUT -->
        <EditText
            android:id="@+id/etForgotEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_neon_blue"
            android:padding="16dp"
            android:hint="Email"
            android:textColor="#00C3FF"
            android:textColorHint="#99CDEB"
            android:inputType="textEmailAddress" />

        <!-- SEND / RESEND OTP BUTTON -->
        <TextView
            android:id="@+id/btnSendOtp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Send OTP"
            android:textColor="#00C3FF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/btn_neon_blue" />

        <!-- OTP + VERIFY SECTION -->
        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <!-- OTP BOXES (YOUR IDS, SAME STYLE) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_neon_blue"
                    android:textColor="#00C3FF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="1" />

            </LinearLayout>

            <!-- VERIFY OTP BUTTON -->
            <TextView
                android:id="@+id/btnVerifyOtp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Verify OTP"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/btn_neon_blue" />
        </LinearLayout>

        <!-- PASSWORD FIELDS (HIDDEN UNTIL OTP VERIFIED) -->
        <LinearLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <!-- NEW PASSWORD -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_neon_blue"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="New Password"
                    android:paddingEnd="40dp"
                    android:textColor="#00C3FF"
                    android:textColorHint="#99CDEB"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/eyeNew"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/eye_toggle" />
            </RelativeLayout>

            <!-- CONFIRM PASSWORD -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_neon_blue"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Confirm Password"
                    android:paddingEnd="40dp"
                    android:textColor="#00C3FF"
                    android:textColorHint="#99CDEB"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/eyeConfirm"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/eye_toggle" />
            </RelativeLayout>
        </LinearLayout>

        <!-- FINAL RESET BUTTON -->
        <TextView
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="#00C3FF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/btn_neon_blue" />

    </LinearLayout>
</ScrollView>