<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg_rounded"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ† Professional Result (Final) "
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select theme and download high-quality result image"
        android:textSize="13sp"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:paddingBottom="15dp"/>


    <!-- Preview Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Preview Image -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#0a0a0a">

                <ImageView
                    android:id="@+id/resultPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>

            </ScrollView>

            <!-- Loading Overlay -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="#FFD700"
                android:visibility="gone"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: Image will be saved in 1080x1920 full HD quality"
        android:textSize="12sp"
        android:textColor="#888888"
        android:gravity="center"
        android:paddingVertical="8dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp">

        <!-- Download Button -->
        <LinearLayout
            android:id="@+id/downloadBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_download_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Share Button -->
        <LinearLayout
            android:id="@+id/shareBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_share_bg"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Close Button -->
    <TextView
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="âœ• Close"
        android:textColor="#999999"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/neon_button"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>







