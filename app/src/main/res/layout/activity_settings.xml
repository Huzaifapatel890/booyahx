<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavBar"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/sample_avatar"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_double_ring"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Huzaifa VP7"
                android:textColor="#00C8FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huzaifa@example.com"
                android:textColor="#90FFFFFF"
                android:textSize="13sp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/txtUniqueId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unique ID: HZZPV599"
                android:textColor="#6FE0FF"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- MENU ITEMS -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.6">

            <!-- EDIT PROFILE -->
            <LinearLayout
                android:id="@+id/btnEditProfile"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_edit_profile"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Edit Profile" />
            </LinearLayout>

            <!-- CHANGE PASSWORD -->
            <LinearLayout
                android:id="@+id/btnChangePassword"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_change_password"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Change Password" />
            </LinearLayout>

            <!-- WINNING HISTORY -->
            <LinearLayout
                android:id="@+id/btnWinningHistory"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_winning_history"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Winning History" />
            </LinearLayout>

            <!-- THEMES -->
            <LinearLayout
                android:id="@+id/btnThemes"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_themes"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Themes" />
            </LinearLayout>

            <!-- ABOUT US -->
            <LinearLayout
                android:id="@+id/btnAboutUs"
                style="@style/SettingsItemStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_about_us"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="About Us" />
            </LinearLayout>

            <!-- SUPPORT -->
            <LinearLayout
                android:id="@+id/btnSupport"
                style="@style/SettingsItemStyle">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_support"
                    android:scaleType="fitCenter" />

                <TextView style="@style/SettingsTextStyle" android:text="Help and Support" />
            </LinearLayout>

        </LinearLayout>

        <!-- LOGOUT BUTTON -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:background="@drawable/logout_button_border"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_logout"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#1A1A1A"
        android:orientation="horizontal"
        android:elevation="8dp">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavHome"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/tvNavHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- PARTICIPATED -->
        <LinearLayout
            android:id="@+id/navParticipated"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavParticipated"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_participated" />

            <TextView
                android:id="@+id/tvNavParticipated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- WALLET -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavWallet"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_wallet" />

            <TextView
                android:id="@+id/tvNavWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- SETTINGS -->
        <LinearLayout
            android:id="@+id/NavSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icNavSettings"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings" />

            <TextView
                android:id="@+id/tvNavProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#00C3FF"
                android:textSize="11sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>