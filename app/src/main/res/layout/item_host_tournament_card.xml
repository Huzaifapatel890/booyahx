<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="#0a0a0a"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/neon_card">

        <!-- Card Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tournamentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Fire"
                    android:textColor="#00FFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tournamentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BR - squad"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/resultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULT"
                android:textColor="#00FFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/neon_button"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rulesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RULES"
                android:textColor="#00FFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/neon_button"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <!-- Tournament Info Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/dialog_header_border">

            <!-- Entry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTRY"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/entryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 GC"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <!-- Prize -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIZE"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/prizePool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="127 GC"
                    android:textColor="#00FFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <!-- Slots -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SLOTS"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/slots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/12"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/timeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:textColor="#ff4444"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Room Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/room_section_bg"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <!-- Edit Icon -->
            <TextView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✏️"
                android:textSize="20sp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Room ID -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROOM ID"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/roomId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDA"
                    android:textColor="#00FFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TING"
                    android:textColor="#00FFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/submitResultBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit Result"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:background="@drawable/neon_green"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/endBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="END"
                android:textColor="#ff4444"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:background="@drawable/end_button_bg"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>