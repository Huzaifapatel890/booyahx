<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient"
    android:orientation="vertical">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RESULT HISTORY"
            android:fontFamily="@font/orbitron_bold"
            android:textSize="18sp"
            android:textColor="@color/neon_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.12" />

        <!-- Spacer to balance back button -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- ===== NEON DIVIDER UNDER HEADER ===== -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/neon_blue" />

    <!-- ===== LOADING STATE ===== -->
    <ProgressBar
        android:id="@+id/progressBarMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:indeterminateTint="@color/neon_blue"
        android:visibility="visible" />

    <!-- ===== EMPTY STATE ===== -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹"
            android:textSize="56sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO HISTORY FOUND"
            android:fontFamily="@font/orbitron_bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play and complete tournaments\nto see your results here"
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- ===== ERROR STATE ===== -->
    <LinearLayout
        android:id="@+id/errorState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš "
            android:textSize="48sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed to load"
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRY"
            android:fontFamily="@font/orbitron_bold"
            android:textSize="14sp"
            android:textColor="@color/neon_blue"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_neon_border_rounded"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- ===== RECYCLER LIST ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:visibility="gone" />

</LinearLayout>