<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_esports_gradient">

    <!-- TOP BAR WITH BACK BUTTON AND LANGUAGE TOGGLE -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_arrow" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- ðŸ”¥ LANGUAGE TOGGLE BUTTON (GLOWING) -->
        <ImageView
            android:id="@+id/btnLanguageToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_language_toggle"
            android:padding="8dp"
            android:background="@drawable/bg_language_button"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/contentContainer"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Top Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us â€“ BooyahX"
                android:textColor="#00C8FF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Main Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#E0FFFFFF"
                android:lineSpacingExtra="6dp"
                android:text="BooyahX ek next-gen esports platform hai jo Free Fire players ko paid lobbies, custom rooms, daily matches, tournaments, aur LAN events ka best experience provide karta hai.\n\nHumara mission simple hai â€” India ke competitive gamers ko ek safe, fair aur transparent battleground dena jahan wo apne skills dikha sakein aur esports me grow kar sakein." />

            <TextView
                android:id="@+id/tvDesignedFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BooyahX specially design kiya gaya hai:"
                android:textColor="#00FFA3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Features List 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_rounded_neon"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tvFeature1Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ® Free Fire Paid Lobbies and Custom Rooms"
                    android:textColor="#00C8FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFeature1Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Fast aur secure room access\nâ€¢ Verified and trusted hosts\nâ€¢ Fair gameplay and anti-cheat focus\nâ€¢ Instant results and payouts"
                    android:textColor="#B0FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Features List 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_rounded_neon"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tvFeature2Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Tournament Organizer"
                    android:textColor="#00C8FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFeature2Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Daily and weekly online tournaments\nâ€¢ 100% transparency in match rules\nâ€¢ Auto bracket, results and leaderboard\nâ€¢ Smooth registration system"
                    android:textColor="#B0FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Features List 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_rounded_neon"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tvFeature3Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–¥ LAN Tournament Organizer (Prepaid Only)"
                    android:textColor="#00C8FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFeature3Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ On-ground esports experience\nâ€¢ Fully managed event support\nâ€¢ Professional match handling\nâ€¢ Competitive stage environment"
                    android:textColor="#B0FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Final Mission -->
            <TextView
                android:id="@+id/tvMissionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Working to Promote Esports"
                android:textColor="#FFD700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMissionDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BooyahX ka main goal India ke young gamers ko esports ka real exposure dena hai. Hum community events, paid lobbies aur tournaments ke through grassroot esports ko promote kar rahe hain â€” taaki har player ko bada hone ka equal chance mile."
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:lineSpacingExtra="7dp"
                android:layout_marginBottom="30dp" />

            <!-- ðŸ”¥ FOLLOW US SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_rounded_neon"
                android:padding="24dp"
                android:layout_marginBottom="40dp"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/tvFollowTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Follow Us"
                    android:textColor="#00FFA3"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvFollowDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stay connected with BooyahX for latest updates, tournaments, and community events!"
                    android:textColor="#C0FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Instagram -->
                    <LinearLayout
                        android:id="@+id/btnInstagram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_instagram"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:text="Instagram"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#B0FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- WhatsApp -->
                    <LinearLayout
                        android:id="@+id/btnWhatsApp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_whatsapp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:text="WhatsApp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#B0FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Telegram -->
                    <LinearLayout
                        android:id="@+id/btnTelegram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_telegram"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:text="Telegram"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#B0FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Discord -->
                    <LinearLayout
                        android:id="@+id/btnDiscord"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_discord"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:text="Discord"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#B0FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>