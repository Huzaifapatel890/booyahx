<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/neon_card"
    android:layout_marginBottom="12dp">

    <!-- Tournament Title -->
    <TextView
        android:id="@+id/txtT1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00C3FF"
        android:textStyle="bold"
        android:textSize="15sp" />

    <!-- Prize Pool Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <!-- Expected PP -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max PP: "
                android:textColor="#88B8D9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtExpectedPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00FFB7"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Current PP -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current: "
                android:textColor="#88B8D9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCurrentPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFA500"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Entry Fee and Slots -->
    <TextView
        android:id="@+id/txtT1Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#88B8D9"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <!-- Date and Time -->
    <TextView
        android:id="@+id/txtT1Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="6dp" />

    <!-- ðŸ”¥ MAP ROTATION -->
    <LinearLayout
        android:id="@+id/mapRotationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map Rotation: "
            android:textColor="#88B8D9"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtMapRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:textStyle="bold"
            android:textSize="11sp"
            android:shadowColor="#00FF00"
            android:shadowRadius="8"
            android:shadowDx="0"
            android:shadowDy="0" />
    </LinearLayout>

    <!-- Mode, Rules and Join Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtT1Mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#88B8D9"
            android:textSize="11sp" />

        <!-- ðŸ”¥ RULES BUTTON -->
        <TextView
            android:id="@+id/btnT1Rules"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="Rules"
            android:textColor="#FFF689"
            android:textStyle="bold"
            android:background="@drawable/neon_button"
            android:layout_marginEnd="8dp" />

        <!-- JOIN BUTTON -->
        <TextView
            android:id="@+id/btnT1Join"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Join"
            android:textColor="#00C3FF"
            android:textStyle="bold"
            android:background="@drawable/neon_button" />

    </LinearLayout>

</LinearLayout>