<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_slot_item_normal">

    <!-- YOU badge — top-right corner, only visible when isYou=true -->
    <TextView
        android:id="@+id/tvSlotYouBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:text="YOU"
        android:textColor="#00FFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:visibility="gone"/>

    <!-- Content column -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvSlotNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLOT #1"
            android:textColor="#3A4A5A"
            android:textSize="9sp"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvSlotTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM NAME"
            android:textColor="#E2E8F0"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Filled indicator dot — bottom-right -->
    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:background="@drawable/dot_filled"/>

</FrameLayout>