<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_esports_gradient">

    <!-- ================= FIXED HEADER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#00C3FF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- ScrollView MUST have ONLY ONE child -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- FULL NAME -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:hint="Enter full name"
                android:textColorHint="#80FFFFFF"
                android:inputType="textPersonName" />

            <!-- AGE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/btnAgeMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"/>

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:hint="18"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:id="@+id/btnAgePlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"/>
            </LinearLayout>

            <!-- GENDER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner_selected"
                android:popupBackground="@drawable/bg_spinner_dropdown_popup"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown" />

            <!-- IN-GAME NAME -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In-game Name"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etGameName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:hint="Your Gamer Tag"
                android:textColorHint="#80FFFFFF"
                android:inputType="text" />

            <!-- PHONE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:hint="Enter phone number"
                android:textColorHint="#80FFFFFF"/>

            <!-- PAYMENT METHOD - STATIC TEXT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:padding="12dp"
                android:text="UPI   (OTHER COMING SOON)"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <!-- UPI ID -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI ID"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpiId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:hint="yourupi@bank"
                android:textColorHint="#80FFFFFF"
                android:inputType="text"/>

            <!-- EMAIL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:enabled="false"
                android:padding="12dp"
                android:textColor="#BBBBBB"
                android:inputType="textEmailAddress"/>

            <!-- ROLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etRole"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_neon_blue"
                android:enabled="false"
                android:text="User"
                android:padding="12dp"
                android:textColor="#BBBBBB"
                android:inputType="text"/>

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/btn_neon_blue"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Update Profile"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/btn_neon_blue"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include layout="@layout/loader_overlay"/>
</LinearLayout>