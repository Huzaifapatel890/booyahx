<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- TOP PROFILE CARD -->
        <LinearLayout
            android:id="@+id/topProfileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/neon_card">

            <!-- Avatar -->
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_avatar"
                    android:contentDescription=""
                    android:background="@drawable/neon_circle" />
            </RelativeLayout>

            <!-- Name + Email -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#00C3FF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#78A8C7"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- WALLET -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtWalletBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#00FFB7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- GAME MODE TABS -->
        <LinearLayout
            android:id="@+id/gameModeRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp">

            <!-- Bermuda -->
            <LinearLayout
                android:id="@+id/btnBermuda"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/icBermuda"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_bermuda"
                    android:scaleType="centerCrop"
                    android:contentDescription="bermuda mode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bermuda"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Clash Squad -->
            <LinearLayout
                android:id="@+id/btnClashSquad"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp">

                <ImageView
                    android:id="@+id/icClashSquad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_clash"
                    android:scaleType="centerCrop"
                    android:contentDescription="clash squad mode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clash Squad"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Special -->
            <LinearLayout
                android:id="@+id/btnSpecial"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/icSpecial"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_trophy"
                    android:scaleType="centerCrop"
                    android:contentDescription="special mode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- UPCOMING TITLE -->
        <TextView
            android:id="@+id/txtUpcomingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Tournaments"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp" />

        <!-- DYNAMIC TOURNAMENT CONTAINER -->
        <LinearLayout
            android:id="@+id/tournamentsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!-- Tournament cards will be added dynamically here -->

        </LinearLayout>
        <include layout="@layout/loader_fragment"/>
        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>

</ScrollView>