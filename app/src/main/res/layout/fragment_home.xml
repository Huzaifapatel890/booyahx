<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ================= FIXED TOP PROFILE CARD ================= -->
    <LinearLayout
        android:id="@+id/topProfileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/neon_card">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_avatar"
                android:background="@drawable/neon_circle" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/txtUsername"
                android:textColor="#00C3FF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- GC MOVED HERE (EMAIL POSITION) -->
            <TextView
                android:id="@+id/txtWalletBalance"
                android:textColor="#00FFB7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- ðŸ”” NOTIFICATION BELL (GC OLD POSITION) -->
        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_notification" />
    </LinearLayout>

    <!-- REST OF YOUR FILE IS 100% UNTOUCHED -->


    <!-- ================= GAME MODE TABS (FIXED) ================= -->
    <LinearLayout
        android:id="@+id/gameModeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="20dp">

        <!-- Bermuda -->
        <LinearLayout
            android:id="@+id/btnBermuda"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/neon_card"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_bermuda" />

            <TextView
                android:text="Bermuda"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Clash Squad -->
        <LinearLayout
            android:id="@+id/btnClashSquad"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/neon_card"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_clash" />

            <TextView
                android:text="Clash Squad"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Special -->
        <LinearLayout
            android:id="@+id/btnSpecial"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/neon_card">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_trophy" />

            <TextView
                android:text="Special"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- ================= UPCOMING TITLE (FIXED) ================= -->
    <TextView
        android:id="@+id/txtUpcomingTitle"
        android:text="Upcoming Tournaments"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ================= ONLY TOURNAMENTS SCROLL ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/tournamentsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" />

    </ScrollView>

    <include layout="@layout/loader_fragment"/>

</LinearLayout>
