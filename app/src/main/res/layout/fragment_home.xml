<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- TOP PROFILE CARD -->
        <LinearLayout
            android:id="@+id/topProfileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/neon_card">

            <!-- Avatar -->
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_avatar"
                    android:contentDescription="User avatar"
                    android:background="@drawable/neon_circle" />
            </RelativeLayout>

            <!-- Name + Email -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huzaifa VP7"
                    android:textColor="#00C3FF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huzaifa@example.com"
                    android:textColor="#78A8C7"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- WALLET -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icRupee"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_rupee"
                    android:contentDescription="rupee icon" />

                <TextView
                    android:id="@+id/txtWalletBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ₹150.00"
                    android:textColor="#00FFB7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- QUICK ACTIONS ROW -->
        <LinearLayout
            android:id="@+id/quickActionsRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp">

            <!-- Tournaments -->
            <LinearLayout
                android:id="@+id/btnTournaments"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/icTrophy"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_trophy"
                    android:contentDescription="tournaments" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tournaments"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Participated -->
            <LinearLayout
                android:id="@+id/btnParticipated"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp">

                <ImageView
                    android:id="@+id/icParticipated"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_participated"
                    android:contentDescription="participated" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participated"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Wallet -->
            <LinearLayout
                android:id="@+id/btnWallet"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/neon_card"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/icWallet"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_wallet"
                    android:contentDescription="wallet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- UPCOMING TITLE -->
        <TextView
            android:id="@+id/txtUpcomingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Tournaments"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp" />

        <!-- TOURNAMENT CARD (example) -->
        <LinearLayout
            android:id="@+id/cardTournament1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/neon_card"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtT1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Fire Solo - ₹2000"
                android:textColor="#00C3FF"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtT1Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry ₹30 • Slots 32 / 100"
                android:textColor="#88B8D9"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtT1Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today • 7:30 PM"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtT1Mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode: SOLO"
                    android:textColor="#88B8D9"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btnT1Join"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Join"
                    android:textColor="#00C3FF"
                    android:textStyle="bold"
                    android:background="@drawable/neon_button" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
</ScrollView>