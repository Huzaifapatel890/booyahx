<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/dialog_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⛔ End Tournament"
            android:textColor="#00FFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_header_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/warning_bg"
            android:padding="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Warning:"
                android:textColor="#ffaa00"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This will permanently end the tournament and mark it as completed. This action cannot be undone."
                android:textColor="#ffaa00"
                android:textSize="13sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason (Optional)"
            android:textColor="#888888"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/reasonInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Why are you ending this tournament?"
            android:textColorHint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/input_bg"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelEndBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:background="@drawable/cancel_button_bg"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/endNowBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="END NOW"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:background="@drawable/danger_button_bg"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>