<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/notification_banner.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationBannerCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    app:cardBackgroundColor="#1A1A2E"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:id="@+id/bannerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_gradient_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Bell icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ””"
            android:textSize="28sp"
            android:paddingEnd="14dp" />

        <!-- Text content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:id="@+id/bannerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Notification"
                android:textColor="#00C3FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/bannerMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="You have a new notification"
                android:textColor="#DDDDDD"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false" />

        </LinearLayout>

        <!-- Arrow icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€º"
            android:textColor="#00C3FF"
            android:textSize="30sp"
            android:paddingStart="12dp"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>