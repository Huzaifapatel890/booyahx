<?xml version="1.0" encoding="utf-8"?>
<!-- Root fills sheet height. Header fixed, RecyclerView scrolls below. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_slots_sheet">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="#1A00FFFF"
        android:layout_marginBottom="4dp"/>

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSlotsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lobby 1 9:00 PM"
                android:textColor="#00FFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#4400FFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"/>

            <TextView
                android:id="@+id/tvSlotsBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPCOMING"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_badge_upcoming"
                android:textColor="#00FFFF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSlotsMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="BR · Squad · 12 Slots"
            android:textColor="#607080"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Thin divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D00FFFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Summary chips row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:gravity="center_vertical">

        <!-- Filled chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_slot_item_normal"
            android:layout_marginEnd="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvSlotsFilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#00E676"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filled"
                android:textColor="#3A4A5A"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>
        </LinearLayout>

        <!-- Open chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_slot_item_normal"
            android:layout_marginEnd="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvSlotsOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="#FFC94D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textColor="#3A4A5A"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>
        </LinearLayout>

        <!-- Total chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_slot_item_normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvSlotsTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#00FFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#3A4A5A"
                android:textSize="10sp"
                android:letterSpacing="0.04"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thin divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D00FFFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- "Your slot highlighted" label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your slot highlighted"
            android:textColor="#00FFFF"
            android:textSize="11sp"
            android:letterSpacing="0.04"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#1A00FFFF"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Fills all remaining sheet height; scrolls independently inside BottomSheet -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSlots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="ifContentScrolls"/>

</LinearLayout>