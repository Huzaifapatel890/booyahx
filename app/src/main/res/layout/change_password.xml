<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_gradient"
            android:padding="20dp">

            <!-- Top Header -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_back_arrow"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#00C8FF"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <!-- Input Fields Container -->
            <LinearLayout
                android:id="@+id/inputContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerLayout"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/edtOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_neon_blue"
                    android:hint="Old Password"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingLeft="20dp"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/edtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_neon_blue"
                    android:hint="New Password"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textPassword" />

                <!-- Password Strength Indicators -->
                <LinearLayout
                    android:id="@+id/passwordRequirements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="gone">

                    <!-- At least 8 characters -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/checkMinLength"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:text="âœ“"
                            android:textColor="#FF4444"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtMinLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="At least 8 characters"
                            android:textColor="#FF4444"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                    <!-- One uppercase -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/checkUppercase"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:text="âœ“"
                            android:textColor="#FF4444"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtUppercase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One uppercase letter (A-Z)"
                            android:textColor="#FF4444"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                    <!-- One lowercase -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/checkLowercase"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:text="âœ“"
                            android:textColor="#FF4444"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtLowercase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One lowercase letter (a-z)"
                            android:textColor="#FF4444"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                    <!-- One number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/checkNumber"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:text="âœ“"
                            android:textColor="#FF4444"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One number (0-9)"
                            android:textColor="#FF4444"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                    <!-- One special character -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/checkSymbol"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:text="âœ“"
                            android:textColor="#FF4444"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSymbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One special character (!@#$%^&amp;*)"
                            android:textColor="#FF4444"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_neon_blue"
                    android:hint="Confirm New Password"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:inputType="textPassword" />

                <!-- Password Match Indicator -->
                <LinearLayout
                    android:id="@+id/passwordMatchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/checkPasswordMatch"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="âœ“"
                        android:textColor="#FF4444"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPasswordMatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passwords do not match"
                        android:textColor="#FF4444"
                        android:textSize="13sp"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Button -->
            <TextView
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Change Password"
                android:gravity="center"
                android:textColor="#00C8FF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/btn_neon_blue"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp" />

        </RelativeLayout>

    </ScrollView>

    <!-- ðŸ”µ FULLSCREEN LOADER -->
    <include layout="@layout/loader_overlay"/>

</FrameLayout>