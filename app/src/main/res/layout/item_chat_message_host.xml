<?xml version="1.0" encoding="utf-8"?>
<!--
  item_chat_message_host.xml
  FIX LOG:
  - Host badge: was transparent+cyan-border+cyan-text → now solid #00E5FF + black text (matches HTML)
  - Timestamp: was outside bubble → now inside bubble bottom-right (matches HTML)
  - Message text color: #C8F0F5 (light cyan-white matching HTML)
  - Host name color: #00E5FF neon with textAllCaps
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="60dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:maxWidth="260dp">

        <!-- HOST BADGE — solid neon cyan, black text (matches HTML exactly) -->
        <TextView
            android:id="@+id/tvHostBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◆  HOST"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.12"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_host_badge"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="2dp"/>

        <!-- Host username line -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HostName"
            android:textColor="#00E5FF"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.12"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Message Bubble — timestamp INSIDE at bottom right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_bubble_host"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message text"
                android:textColor="#C8F0F5"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>

            <!-- Timestamp inside bubble -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="12:30 AM"
                android:textColor="#5900E5FF"
                android:textSize="9sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>