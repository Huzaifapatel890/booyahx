<?xml version="1.0" encoding="utf-8"?>
<!-- item_result_history.xml
     Exact layout: tournament name + mode badge | entry fee / date / time | position box -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_neon_border"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- ===== ROW 1: Tournament name + Mode badge ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txtTournamentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOURNAMENT NAME"
            android:fontFamily="@font/orbitron_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp" />

        <!-- Mode badge -->
        <TextView
            android:id="@+id/txtGameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® BR SQUAD"
            android:textSize="11sp"
            android:textColor="@color/neon_blue"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg_mode_badge" />

    </LinearLayout>

    <!-- Neon divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A00D9FF"
        android:layout_marginBottom="8dp" />

    <!-- ===== ROW 2: Entry Fee | Date | Time ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!-- Entry Fee -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTRY FEE"
                android:textSize="10sp"
                android:textColor="#888888"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/txtEntryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE"
                android:fontFamily="@font/orbitron_bold"
                android:textSize="13sp"
                android:textColor="@color/neon_blue"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textSize="10sp"
                android:textColor="#888888"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Feb 2026"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME"
                android:textSize="10sp"
                android:textColor="#888888"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 PM"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- ===== ROW 3: Position box ===== -->
    <LinearLayout
        android:id="@+id/positionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_position_box"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="POSITION"
            android:textSize="11sp"
            android:textColor="#888888"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/txtPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:fontFamily="@font/orbitron_bold"
            android:textSize="20sp"
            android:textColor="@color/neon_blue"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ===== ROW 4: Kills | Reward | Claimed chips ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Kills chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_chip_default"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’€ "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtKills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Reward chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_chip_reward"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’Ž "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 GC"
                android:textSize="12sp"
                android:textColor="#C084FC"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Claimed chip -->
        <TextView
            android:id="@+id/txtClaimed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âœ… Claimed"
            android:textSize="11sp"
            android:textColor="@color/success_green"
            android:gravity="center"
            android:background="@drawable/bg_chip_claimed"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>