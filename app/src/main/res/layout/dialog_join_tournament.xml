<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_neon_black"
        android:padding="20dp"
        android:layout_margin="20dp">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Tournament"
                android:textColor="#00C3FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <!-- CONTENT -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TEAM NAME (editable, light grey) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Name *"
                    android:textColor="#88B8D9"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/etTeamName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your team name"
                    android:textColor="#D6D6D6"
                    android:textColorHint="#6688B8D9"
                    android:background="@drawable/neon_card"
                    android:padding="12dp"
                    android:maxLength="30"
                    android:singleLine="true" />

                <!-- PLAYER 1 (fixed, darker grey) -->
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1 (You)"
                    android:textColor="#88B8D9"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/etPlayer1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#B0B0B0"
                    android:textColorHint="#6688B8D9"
                    android:background="@drawable/neon_card"
                    android:padding="12dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:enabled="false" />

                <!-- OPTIONAL PLAYERS -->
                <EditText
                    android:id="@+id/etPlayer2"
                    style="@style/JoinOptionalInput"
                    android:hint="Player 2 (optional)"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/etPlayer3"
                    style="@style/JoinOptionalInput"
                    android:hint="Player 3 (optional)"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/etPlayer4"
                    style="@style/JoinOptionalInput"
                    android:hint="Player 4 (optional)"
                    android:singleLine="true" />
                <EditText
                    android:id="@+id/etPlayer5"
                    style="@style/JoinOptionalInput"
                    android:hint="Player 5 (optional)"
                    android:singleLine="true" />

            </LinearLayout>
        </ScrollView>

        <!-- FOOTER -->
        <TextView
            android:id="@+id/btnJoin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="JOIN TOURNAMENT"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/neon_card" />

    </LinearLayout>

</FrameLayout>