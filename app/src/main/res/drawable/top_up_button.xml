<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="24dp" />

    <!-- Gradient fill -->
    <gradient
        android:startColor="#00C6FF"
        android:endColor="#7A00FF"
        android:angle="45" />

    <!-- Neon green stroke -->
    <stroke
        android:width="2dp"
        android:color="#00FF9A" />

    <!-- Inner padding -->
    <padding
        android:left="20dp"
        android:top="12dp"
        android:right="20dp"
        android:bottom="12dp" />
</shape>