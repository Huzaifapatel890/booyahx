<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/date_picker_bg.xml
     Dark pill-shaped background for the From/To date TextViews.
     Matches the existing card colour palette (#060D12 fill, #1E2D47 stroke). -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#060D12"/>

    <stroke
        android:width="1.5dp"
        android:color="#1E2D47"/>

    <corners android:radius="10dp"/>

</shape>