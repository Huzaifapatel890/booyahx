<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow ring: rgba(0,229,255,0.5) = #8000E5FF -->
    <item>
        <shape>
            <solid android:color="#8000E5FF"/>
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
        </shape>
    </item>

    <!-- Inner bubble inset 1.5dp to reveal glow ring -->
    <!-- Dark teal gradient: #001A22 â†’ #00262E matching HTML -->
    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#001A22"
                android:endColor="#00262E"/>
            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:bottomRightRadius="19dp"/>
        </shape>
    </item>

</layer-list>