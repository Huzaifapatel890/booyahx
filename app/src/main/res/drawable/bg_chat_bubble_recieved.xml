<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item
        android:left="1dp"
        android:top="2dp">
        <shape>
            <solid android:color="#33000000"/>
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="18dp"
                android:bottomLeftRadius="18dp"
                android:bottomRightRadius="18dp"/>
        </shape>
    </item>

    <!-- Main bubble: dark charcoal gradient matching HTML #131313 → #1A1A1A at 135° -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#131313"
                android:endColor="#1A1A1A"/>
            <!-- Subtle cyan border: rgba(0,229,255,0.14) -->
            <stroke
                android:width="1dp"
                android:color="#2400E5FF"/>
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="18dp"
                android:bottomLeftRadius="18dp"
                android:bottomRightRadius="18dp"/>
        </shape>
    </item>

</layer-list>