<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.booyahx">

    <!-- Vibration Permission -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- ✅ ADD THIS: Required for Android 11+ to detect installed UPI apps -->
    <queries>
        <package android:name="com.google.android.apps.nbu.paisa.user" />
        <package android:name="com.phonepe.app" />
        <package android:name="net.one97.paytm" />
        <package android:name="in.fampay.app" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/booyahx_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BooyahX">

        <!-- ✅ FILE PROVIDER (REQUIRED FOR SHARE) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- SPLASH SCREEN (Launcher) -->
        <activity
            android:name="com.booyahx.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN SELECTION PAGE -->
        <activity
            android:name="com.booyahx.LoginActivity"
            android:exported="false" />

        <!-- USERNAME + PASSWORD LOGIN -->
        <activity
            android:name="com.booyahx.LoginUsernameActivity"
            android:exported="false" />

        <!-- REGISTER ACCOUNT PAGE -->
        <activity
            android:name="com.booyahx.RegisterActivity"
            android:exported="false" />

        <!-- FORGOT PASSWORD PAGE -->
        <activity
            android:name="com.booyahx.ForgotPasswordActivity"
            android:exported="false" />


        <activity
            android:name=".settings.AboutActivity$AboutUsActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.BooyahX.NoActionBar" />

        <activity
            android:name=".settings.ChangePasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.BooyahX.NoActionBar" />

        <activity
            android:name=".settings.HelpSupportActivity"
            android:exported="false"
            android:theme="@style/Theme.BooyahX.NoActionBar" />

        <!-- MAIN DASHBOARD -->
        <activity
            android:name="com.booyahx.DashboardActivity"
            android:exported="true" />

        <activity
            android:name=".settings.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.BooyahX.NoActionBar" />

        <activity
            android:name=".settings.WinningHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.BooyahX.NoActionBar" />

        <activity
            android:name=".notifications.NotificationActivity"
            android:exported="false"
            android:theme="@style/Theme.BooyahX.NoActionBar"/>

    </application>

</manifest>